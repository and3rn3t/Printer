{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build (xcodebuild)",
            "type": "shell",
            "command": "xcodebuild -project Printer.xcodeproj -scheme Printer build 2>&1 | xcbeautify --disable-colored-output",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$xcodebuild"],
            "presentation": {
                "reveal": "silent",
                "panel": "dedicated",
                "clear": true
            }
        },
        {
            "label": "Clean Build (xcodebuild)",
            "type": "shell",
            "command": "xcodebuild -project Printer.xcodeproj -scheme Printer clean build 2>&1 | xcbeautify --disable-colored-output",
            "problemMatcher": ["$xcodebuild"],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true
            }
        },
        {
            "label": "Run Tests (xcodebuild)",
            "type": "shell",
            "command": "xcodebuild -project Printer.xcodeproj -scheme Printer test -destination 'platform=iOS Simulator,name=iPhone 16' 2>&1 | xcbeautify --disable-colored-output",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": ["$xcodebuild"],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true
            }
        },
        {
            "label": "Build for Testing",
            "type": "shell",
            "command": "xcodebuild -project Printer.xcodeproj -scheme Printer build-for-testing -destination 'platform=iOS Simulator,name=iPhone 16' 2>&1 | xcbeautify --disable-colored-output",
            "problemMatcher": ["$xcodebuild"],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true
            }
        },
        {
            "label": "Lint (SwiftLint)",
            "type": "shell",
            "command": "swiftlint lint --config .swiftlint.yml --reporter emoji",
            "problemMatcher": {
                "owner": "swiftlint",
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "^(.+):(\\d+):(\\d+):\\s+(warning|error):\\s+(.+)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true
            }
        },
        {
            "label": "Lint Fix (SwiftLint autocorrect)",
            "type": "shell",
            "command": "swiftlint lint --fix --config .swiftlint.yml",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true
            }
        },
        {
            "label": "Archive (Release)",
            "type": "shell",
            "command": "xcodebuild -project Printer.xcodeproj -scheme Printer -configuration Release archive -archivePath build/Printer.xcarchive 2>&1 | xcbeautify --disable-colored-output",
            "problemMatcher": ["$xcodebuild"],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true
            }
        },
        {
            "label": "Show Build Settings",
            "type": "shell",
            "command": "xcodebuild -project Printer.xcodeproj -scheme Printer -showBuildSettings | head -80",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true
            }
        },
        {
            "type": "sweetpad",
            "action": "build",
            "problemMatcher": [
                "$sweetpad-watch",
                "$sweetpad-xcodebuild-default",
                "$sweetpad-xcbeautify-errors",
                "$sweetpad-xcbeautify-warnings"
            ],
            "label": "sweetpad: build",
            "detail": "Build the app",
            "isBackground": true,
            "presentation": {
                "reveal": "silent",
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "type": "sweetpad",
            "action": "launch",
            "problemMatcher": [
                "$sweetpad-watch",
                "$sweetpad-xcodebuild-default",
                "$sweetpad-xcbeautify-errors",
                "$sweetpad-xcbeautify-warnings"
            ],
            "label": "sweetpad: launch",
            "detail": "Build and Launch the app",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "type": "sweetpad",
            "action": "clean",
            "problemMatcher": [
                "$sweetpad-watch",
                "$sweetpad-xcodebuild-default",
                "$sweetpad-xcbeautify-errors",
                "$sweetpad-xcbeautify-warnings"
            ],
            "label": "sweetpad: clean",
            "detail": "Clean the app",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}